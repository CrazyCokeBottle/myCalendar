/* pages/userdiary/userdiary.wxss */
page{
   background-color:#fff;
}

.allview{}

.diary-title{
  position: fixed;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-top:1rpx solid rgba(204,204,204,1);
}


.diary-title .index-image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
  left: 0;
}

.index-text{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  background-color: #f4598d27; 
}

.index-item{
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  padding-left: 40rpx;
  color: #666;
  border-bottom: 1rpx solid #ddd; 
}

.index-title{
  width: 50%;
}

.index-date{
  width: 40%;
  color:#999;
  text-align: right;
  margin-right: 20rpx; 
}

.diary-title .text{
  text-align: center;
}

.mydate{
  margin-top: 80rpx; 
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  color:#999;
}

.textcontent{
  height: 1000rpx;
  margin: 0 20rpx; 
  padding: 30rpx;
  line-height: 60rpx;
}

.pop-image{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  left: 50%;
  bottom: 3%;
  margin-left: -30rpx;
  z-index: 200; 
}

