/* pages/index/index.wxss */
page{
   background-color: #fff;
}

.allview{
  border-top:1rpx solid rgba(204,204,204,1);
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}

.calendar{
  /* box-shadow: 0rpx 10rpx 50rpx 2rpx rgba(85, 85, 85, 0.10) inset;  */
  text-align: center; 
  color:#666;
}

.year{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}

.textleft,.imgright{
  padding: 0 50rpx;
  width: 50%;
}

.textleft{
  text-align: left;
}

.imgright{
  text-align: right;
  padding-right: 20rpx; 
}

.year .imgright image{
  width: 60rpx;
  height: 60rpx;
}

.month{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}

.action{
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.week{
  display: flex;
  justify-content: space-around
}

.day{
  display: flex;
  flex-direction:column;
  height: 500rpx;
  justify-content: space-between;
}

.day-row{
  display: flex;
  justify-content: space-around;
}

.day-cell{
  margin: 2rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  border:1rpx solid #fff; 
}

.todaycolor{
  background-color: #f4598d;
  color: #fff; 
}

.checkedcolor{
  border:1rpx solid #f4598d;
}

.day-cell:first-child{
  color: #f4598d;
}

.day-cell:last-child{
  color: #f4598d;
}

.carousel{
  width: 100%;
  height: 322rpx;
  margin-bottom: 5%; 
}

.carousel-cell{
  margin: 0 auto;
  width: 600rpx;
  height: 322rpx;
  border-radius: 70rpx;
  box-shadow: 0rpx 10rpx 30rpx 2rpx rgba(10, 85, 85, 0.10); 
  box-sizing: border-box;
}

.carousel-cell image{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 70rpx;
}