/* pages/userCenter/userCenter.wxss */
.mytop{
  height: 350rpx;
}

.profile{
  width: 100%;
  height: 350rpx;
  position: absolute; 
  background-image:linear-gradient(45deg,rgba(254,172,94,0.5),rgba(199,121,208,0.5),rgba(75,192,200,0.5)); 
}

.profile-img{
  width: 150rpx;
  height: 150rpx;
  border-radius:50%;
  overflow: hidden;
  position: absolute;
  top: 35%;
  left: 50%;
  margin: -75rpx;
  border: 5rpx solid #fff;  
}

.profile-name{
  width: 100%;
  height:30rpx;
  color: #fff;
  position: absolute;
  top: 70%;
  left: 0;
  text-align: center;
}

.cell-top{
  margin-top: 50rpx; 
}

.popcolor{
  width: 100%;
  height: 100%;
  position: relative;
}

.popcolor>.mycontent{
  position: absolute;
  width: 300rpx;
  height: 65rpx;
  line-height: 65rpx;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -290rpx;
  border: 1rpx solid #fff;
  border-radius: 5rpx; 
  text-align: center;  
}

.popcolor>image{
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -150rpx;
}